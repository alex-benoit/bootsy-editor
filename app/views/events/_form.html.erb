<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description,
          as: :bootsy,
          editor_options: { blockquote: false, font_styles: false, emphasis: false, html: false, link: false, image: false, color: false },
          input_html: { rows: 5 }
    %>
    <%= f.input :location %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
